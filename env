#!/bin/bash

# ********************************
# MY ENVIRONMENT VARIABLES       *
# ********************************

# WARNING: wrap values with double quotes (") !

#============================================ SHELL SETTINGS

# locale
LC_ALL='C'
LANG='C.UTF-8'	

# special directories
CONFIG="$HOME/dotfiles"                       # my shell settings
NEXUS="$HOME/data"                            # the source of my data
CACHE="$XDG_CACHE_HOME"                       # cache data
LOGS="$HOME/logs"							  # log output
TRASH="$HOME/trash"                           # discrarded files

# special values
GITHUB='https://github.com/bytesmith-ahmad'   # my GitHub URL

# general
PROMPT_COMMAND="source $CONFIG/bash_prompts/
exit-git-ps1"                                 # command to be run after each command
EDITOR='micro'                                # default TUI editor
VISUAL='code --new-window'                    # default GUI editor for Linux

# deprecated
DATA_SOURCE="$HOME/data"
CONFIG_DIR="$CONFIG"

#=========================================== SHELL SETTINGS

# alphabetical order

#======================================= auto
AUTOKNIGHT_CONFIG=""
AUTOKNGIHT_DIR="$NEXUS/auto"
#======================================= auto

#======================================= coin
COINMASTER_CONFIG="$CONFIG_DIR/coin.yml"
COINMASTER_DIR="$NEXUS/coin"
COINMASTER_DATA="$COINMASTER_DIR/coinmaster.sqlite"
COINMASTER="$COINMASTER_DATA" # deprecated
#======================================= coin

#======================================= docs
DOCSWARDEN_CONFIG=""
DOCSWARDEN_DIR="$NEXUS/docs"
#======================================= docs

#======================================= file
FILEKEEPER_CONFIG=""
FILEKEEPER_DIR="$HOME/archives"
ARCHIVES="$FILEKEEPER_DIR" # deprecated
#======================================= file

#======================================= git
GIT_CONFIG_GLOBAL="$CONFIG/gitconfig"
GIT_EDITOR='code --new-window --wait'
#======================================= git

#======================================= jrnl
JRNL_CONFIG="$CONFIG/jrnl.yml"
JRNL_DIR="$NEXUS/jrnl"
JRNL_JOURNAL='main'
#======================================= jrnl

#======================================= pass
PASSWORD_STORE_DIR="$NEXUS/pass"
PASSWORD_STORE_CLIP_TIME=300
#======================================= pass

#======================================= task
TASKRC="$CONFIG/taskrc"
TASKDATA="$NEXUS/task"
TASK_LIMIT=7 # 7 fits Aran's screen
TASK_WAIT_DURATION="2hours"
#======================================= task

#======================================= status
STATUS_REPO_LIST="$CONFIG/repositories.list"
#======================================= status

#======================================= vita
VITAMAGE_CONFIG="$CONFIG/vitarc"
VITAMAGE_DIR="$NEXUS/vita"
#======================================= vita 

#======================================= 
