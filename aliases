#!/bin/bash

# recently added
uuid='u=$(uuidgen) ; echo $u | clipboard ; echo -e "New UUID:\n$u"'
pacman='sudo pacman'
mount='sudo mount'
umount='sudo umount'
coin='coinmaster'
open='_() { xdg-open "$@" 2> /tmp/xdg-open.log & }; _'
clipboard='xclip -selection clipboard'
jrnlw='jrnl -w'
sqlite-gui='_() { nohup sqlitebrowser "$@" > /tmp/sqlitebrowser.log & }; _'

# computer functions
shutdown='shutdown.exe /s'
hibernate='shutdown.exe /h'

# GNU utilities
..='cd ..'
.~="cd $HOME"
cp='cp -vi'
mv='mv -vi'
rm='rm -vi'
mkdir='mkdir -v'
rmdir='rmdir -v'
chmod='chmod -v'
ls='ls --color=auto'
grep='grep --color=auto'
ll='ls -vhAlF'
la='ls -A'
l='ls -CF'
peek="tree -L 1"

# file handling
del='move-to-trash'
mu='micro'
mouse='_() { nohup mousepad -o "mixed" "$@" & }; _'
md='glow'
np="notepad.exe"
npp='/mnt/c/"Program Files"/Notepad++/notepad++.exe'
tarlist='tar -tzvf'
view='wslview'

# web
mail='firefox https://outlook.office.com/mail/'
syncthing='firefox 127.0.0.1:8384'

# TaskWarrior
rv='task next +RV'
tk+='tk add'
tk-='tk delete'
tk~='tk modify'

# utilities
cal='bc -ql'
D='date +%Y-%m-%d -d'
DT='date +%Y-%m-%dT%T -d'
T='date +%T -d'

# common typos
gti='git'
